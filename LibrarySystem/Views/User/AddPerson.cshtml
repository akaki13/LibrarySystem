@model LibrarySystem.Models.View.AddPersonView
@{
    ViewData["Title"] = "Add Person";

}

<form class="card-body cardbody-color p-lg-5" method="post" asp-action="AddPerson" asp-controller="User">

    <div class="mb-3">
        <p>@ViewBag.ErrorMessage</p>
    </div>
    <div class="mb-3">
        <p class="mb-1">Firstname</p>
        <input type="text" class="form-control" asp-for="Firstname" placeholder="Firstname">
        <span class="text-danger" asp-validation-for="Firstname"></span>
    </div>
    <div class="mb-3">
        <p class="mb-1">Lastname</p>
        <input type="text" class="form-control" asp-for="Lastname" placeholder="Lastname">
        <span class="text-danger" asp-validation-for="Lastname"></span>
    </div>
    <div class="mb-3">
        <p class="mb-1">Phone</p>
        <input type="text" class="form-control" asp-for="Phone" placeholder="Phone">
        <span class="text-danger" asp-validation-for="Phone"></span>
    </div>
    <div class="mb-3">
        <p class="mb-1">Email</p>
        <input type="text" class="form-control" asp-for="Email" placeholder="Email">
        <span class="text-danger" asp-validation-for="Email"></span>
    </div>
     <div class="mb-3">
        <p class="mb-1">Address</p>
        <input type="text" class="form-control" asp-for="Address" placeholder="Address">
        <span class="text-danger" asp-validation-for="Address"></span>
    </div>
    <div class="mb-3">
        <p class="mb-1">Date Of Birth</p>
        <input asp-for="DateOfBirth" id="datepicker" type="text" class="form-control" placeholder="Date Of Birth " />
        <span class="text-danger" asp-validation-for="DateOfBirth"></span>
    </div>
  
    <div class="text-center">
        <button type="submit" class=" px-5 mb-5 w-100">
            Save Book
        </button>
    </div>
</form>

@section Scripts
    {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.inputmask/5.0.6/jquery.inputmask.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.bundle.min.js"></script>
    <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css" rel="stylesheet" />
    <script>
        $(function () {
            $('#datepicker').datepicker({
                format: "yyyy/mm/dd"
            });
        });
    </script>
    }