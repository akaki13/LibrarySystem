@{
    ViewData["Title"] = "Books";
}
<div  class="mb-3 ">
  <a class="mb-5 btn-link" asp-controller="Book" asp-action="AddBook">  Add Book  </a>
</div>

<div class="input-group mb-2">
    <input type="text" id="name" class="form-control" placeholder="Name">
    <input type="text" id="description" class="form-control" placeholder="Description">
    <input type="text" id="author" class="form-control" placeholder="Author">
    <input type="text" id="genre" class="form-control" placeholder="Genre">
    <input type="text" id="publisher" class="form-control" placeholder="Publisher">
    <input type="text" id="shelf" class="form-control" placeholder="Shelf">
    <input type="text" id="language" class="form-control" placeholder="Language">
    <span class="input-group-btn">
        <button class="btn btn-primary" id="submit" type="button"><i class="fa fa-search"></i></button>
    </span>
</div>

<table class="table table-striped table-borderless">
    <thead>
        <tr>
            <th scope="col" class="text-center">Photo</th>
            <th scope="col" class="text-center sort" data-sort="name">Name</th>
            <th scope="col" class="text-center sort" data-sort="description">Description</th>
            <th scope="col" class="text-center sort" data-sort="author">Author</th>
            <th scope="col" class="text-center sort" data-sort="genre">Genre</th>
            <th scope="col" class="text-center sort" data-sort="publisher">Publisher</th>
            <th scope="col" class="text-center sort" data-sort="shelf">Shelf</th>
            <th scope="col" class="text-center sort" data-sort="language">Language</th>
            <th scope="col" class="text-center">Actions</th>
        </tr>
    </thead>
    <tbody id="body">
    </tbody>

</table>
<nav aria-label="Page navigation example" class="wrapper">
    <div id="pagination-container"></div>
</nav>
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="ModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="ModalLabel">Delete Confirmation</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this row?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary confirm-delete">Delete</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="ModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="ModalLabel">Message</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p id="modalbody"></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="//code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script src="~/js/Pagination.js" asp-append-version="true"></script>
    <script src="~/js/Book.js" asp-append-version="true"></script>
}