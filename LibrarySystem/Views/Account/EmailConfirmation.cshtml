@{
    ViewData["Title"] = "Forgot Pasword";
}
<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card my-5">

                <form class="card-body cardbody-color p-lg-5" style="background-color: #ebf2fa" method="post" asp-action="ForgotPasswordDetails" asp-controller="Account">
                    <div class="text-center">
                        <img src="https://cdn.pixabay.com/photo/2016/03/31/19/56/avatar-1295397__340.png" class="img-fluid profile-image-pic img-thumbnail rounded-circle my-3"
                             width="200px" alt="profile">

                    </div>
                    <div class="form-text text-center mb-5 text-dark">
                        @ViewBag.ErrorMessage
                        
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>