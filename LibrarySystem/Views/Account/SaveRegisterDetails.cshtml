@{
    ViewData["Title"] = "Email Send";
}
<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card my-5">
                <div class="card-body cardbody-color p-lg-5" style="background-color: #ebf2fa">
                    <div class="text-center">
                        <img src="https://cdn.pixabay.com/photo/2016/03/31/19/56/avatar-1295397__340.png" class="img-fluid profile-image-pic img-thumbnail rounded-circle my-3"
                             width="200px" alt="profile">

                    </div>
                    <div class="mb-3">
                        <p>@ViewBag.ErrorMessage</p>
                    </div>
                    <div class="form-text text-center mb-2 text-dark">
                        Email Confirmation link has been sent by email.
                    </div>
                    <div class="form-text text-center mb-2 text-dark">
                        If you do not receive an email, please check your spam or junk filter
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>