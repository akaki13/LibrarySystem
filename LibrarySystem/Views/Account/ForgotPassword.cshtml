@model LibrarySystem.Models.View.ForgotPassworedView
@{
    ViewData["Title"] = "Forgot Pasword";
}
<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card my-5" >

                <form class="card-body cardbody-color p-lg-5"  method="post" asp-action="ForgotPasswordDetails" asp-controller="Account">

                    <div class="text-center">
                        <img src="https://cdn.pixabay.com/photo/2016/03/31/19/56/avatar-1295397__340.png" class="img-fluid profile-image-pic img-thumbnail rounded-circle my-3"
                             width="200px" alt="profile">

                    </div>
                    <div class="mb-3">
                        <p>@ViewBag.ErrorMessage</p>
                    </div>
                    <div class="mb-3">
                        <input type="text" class="form-control" asp-for="Email" class="form-control" placeholder="Email">
                        <span class="text-danger" asp-validation-for="Email"></span>
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-color px-5 mb-5 w-100">
                            Send Email
                        </button>
                    </div>
                    <div class="form-text text-center mb-5 text-dark">
                        Not
                        Registered? <a class="text-dark fw-bold" asp-controller="Account" asp-action="Register">
                            Create an Account
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>