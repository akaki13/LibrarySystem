@model LibrarySystem.Models.View.LoginView
@{
    ViewData["Title"] = "Login";
}



<div class="container">
    <div class="row">
      <div class="col-md-6 offset-md-3">
        <div class="card my-5">

                <form class="card-body cardbody-color p-lg-5" style="background-color: #ebf2fa" method="post" asp-action="LoginInDetails" asp-controller="Account">

            <div class="text-center">
              <img src="https://cdn.pixabay.com/photo/2016/03/31/19/56/avatar-1295397__340.png" class="img-fluid profile-image-pic img-thumbnail rounded-circle my-3"
                width="200px" alt="profile">

            </div>
                    <div class="mb-3">
                        <p>@ViewBag.ErrorMessage</p>
                    </div>
            <div class="mb-3">
                        <input type="text" class="form-control" input asp-for="Usarname" class="form-control"
                placeholder="User Name">
                        <span class="text-danger" asp-validation-for="Usarname"></span>
            </div>
            <div class="mb-3">
                        <input type="password" class="form-control" asp-for="Password" class="form-control" placeholder="Password">
                        <span class="text-danger" asp-validation-for="Password"></span>
            </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-color px-5 mb-5 w-100" style="background-color: #0e1c36; color: #fff;">
                            Login
                        </button>
                    </div>
            <div  class="form-text text-center mb-5 text-dark">Not
                        Registered? <a class="text-dark fw-bold" asp-controller="Account" asp-action="Register">
                        Create an Account</a>
            </div>
                    <div class="form-text text-center mb-5 text-dark">
                        
                        <a class="text-dark fw-bold" asp-controller="Account" asp-action="ForgotPassword">
                            Forgot Password?
                        </a>
                    </div>
          </form>
        </div>
      </div>
    </div>
  </div>