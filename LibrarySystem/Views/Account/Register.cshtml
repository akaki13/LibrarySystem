@model LibrarySystem.Models.View.RegisterView

@{
    ViewData["Title"] = "Register";
}

<div class="container">
    <div class="row">
      <div class="col-md-6 offset-md-3">
        <div class="card my-5">

                <form class="card-body cardbody-color p-lg-5" style="background-color: #ebf2fa" method="post" asp-action="SaveRegisterDetails" asp-controller="Account">

            <div class="text-center">
              <img src="https://cdn.pixabay.com/photo/2016/03/31/19/56/avatar-1295397__340.png" class="img-fluid profile-image-pic img-thumbnail rounded-circle my-3"
                width="200px" alt="profile">

            </div>
                    <div class="mb-3">
                        <p>@ViewBag.ErrorMessage</p>
                    </div>
                    <div class="mb-3">
                        <input type="text" class="form-control" input asp-for="FirstName" class="form-control"
                               placeholder="First Name">
                        <span class="text-danger" asp-validation-for="FirstName"></span>
                    </div>
                    <div class="mb-3">
                        <input type="text" class="form-control" input asp-for="LastName" class="form-control"
                               placeholder="Last Name">
                        <span class="text-danger" asp-validation-for="LastName"></span>
                    </div>
            <div class="mb-3">
                        <input type="text" class="form-control" input asp-for="Login" class="form-control"
                               placeholder="User Name ">
                        <span class="text-danger" asp-validation-for="Login"></span>
            </div>
            <div class="mb-3">
                        <input type="password" class="form-control" asp-for="Password" class="form-control" placeholder="Password">
                        <span class="text-danger" asp-validation-for="Password"></span>
            </div>
                    <div class="mb-3">
                        <input type="text" class="form-control" input asp-for="Address" class="form-control"
                               placeholder="Address">
                        <span class="text-danger" asp-validation-for="Address"></span>
                    </div>
                    <div class="form-group mb-3">
                       
                        <input asp-for="DateOfBirth" id="datepicker" type="text" class="form-control" placeholder="Date Of Birth " />
                        <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <input type="text" class="form-control" asp-for="Email" class="form-control" placeholder="Email">
                        <span class="text-danger" asp-validation-for="Email"></span>
                    </div>
                    <div class="mb-3">
                        <input type="text" class="form-control" asp-for="Phone" class="form-control" type="tel" id="phone"  data-inputmask-mask="599 99-99-99" placeholder="Phone Number">
                        <span class="text-danger" asp-validation-for="Phone"></span>
                    </div>
                  
                    <div class="text-center">
                        <button type="submit" class="btn btn-color px-5 mb-5 w-100" style="background-color: #0e1c36; color: #fff;">
                            Register
                        </button>
                    </div>
                    <div id="emailHelp" class="form-text text-center mb-5 text-dark">
                        Already Registered ? <a class="text-dark fw-bold" asp-controller="Account" asp-action="Login">
                            Login
                     </a>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

@section Scripts
    {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.inputmask/5.0.6/jquery.inputmask.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.bundle.min.js"></script>
    <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet" />    
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css" rel="stylesheet" />   
    <script>
        $(function () {           
            $('#datepicker').datepicker({
                format: "yyyy/mm/dd"
            });        
        });
    </script>
    <script>
        $(document).ready(function () {
            $('#phone').inputmask();
        });
    </script>
    }