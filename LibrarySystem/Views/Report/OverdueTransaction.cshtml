@{
    ViewData["Title"] = "Overdue transactions";
}

<button class="mb-3 " id="csv-btn">Save Data to CSV</button>
<button class="mb-3 " id="pdf-btn">Save Data to PDF</button>

<div class="input-group mb-2">
    <input type="text" id="personName" class="form-control" placeholder="Client Name">
    <input type="text" id="bookName" class="form-control" placeholder="Book Name">
    <p class="search-title">Should Have Returned: </p>
    <input type="text" id="returnAfter" class="form-control" placeholder="After">
    <input type="text" id="returnBefore" class="form-control" placeholder="Before">
    <span class="input-group-btn">
        <button class="btn btn-primary" id="submit" type="button"><i class="fa fa-search"></i></button>
    </span>
</div>
<table class="table table-striped table-borderless">
    <thead>
        <tr>
            <th scope="col" class="text-center sort" data-sort="personName">Client Name</th>
            <th scope="col" class="text-center sort" data-sort="bookName">Book Name</th>
            <th scope="col" class="text-center sort" data-sort="returnTime">Should Have Returned</th>
        </tr>
    </thead>
    <tbody id="body">
    </tbody>

</table>
<nav aria-label="Page navigation example" class="wrapper">
    <div id="pagination-container"></div>
</nav>

@section Scripts {
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/moment.min.js"></script>
    <script src="//code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css" rel="stylesheet" />
    <script>
        $(function () {
            $('#returnAfter').datepicker({
                format: "yyyy/mm/dd"
            });
            $('#returnBefore').datepicker({
                format: "yyyy/mm/dd"
            });
        });
    </script>
    <script src="~/js/Pagination.js" asp-append-version="true"></script>
    <script src="~/js/OverdueTransactions.js" asp-append-version="true"></script>
}
