@model LibrarySystem.Models.View.SliderView
@{
    ViewData["Title"] = "Home Page";
}
<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        @for(int i = 0; i < Model.Sliders.Count; i++)
        {
            if (i == 0)
            {
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            }
            else
            {
                <li data-target="#myCarousel" data-slide-to="@i"></li>
            }
        }
           @* <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>*@
    </ol>
    <div class="carousel-inner">
        @for(int i = 0; i < Model.Sliders.Count; i++)
        {
            if (i == 0)
            {
                <div class="carousel-item active">
                    <img src="@Model.Sliders[i].Path" alt="Image">
                    <div class="carousel-caption">
                        <h3>Slide 1</h3>
                        <p>Some text for the first slide.</p>
                    </div>
                </div>
            }
            else
            {
                <div class="carousel-item">
                    <img src="@Model.Sliders[i].Path" alt="Image ">
                    <div class="carousel-caption">
                        <h3>Slide 3</h3>
                        <p>Some text for the third slide.</p>
                    </div>
                </div>
            }
        }
        
        @*<div class="carousel-item">
            <img src="Image/2.jpg" alt="Image 2">
            <div class="carousel-caption">
                <h3>Slide 2</h3>
                <p>Some text for the second slide.</p>
            </div>
        </div>*@
        
    </div>
    <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>




